<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.rover.boma" version="1.0.0" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>boma</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html"/>
    <allow-navigation href="https://youtu.be/*"/>
    <allow-navigation href="https://www.youtube.com/*"/>
    <allow-navigation href="https://vimeo.com/*"/>
    <allow-navigation href="https://player.vimeo.com/video/*"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
        <icon id="ldpi" src="res/icon/android/ldpi.png" density="ldpi"/>
        <icon id="mdpi" src="res/icon/android/mdpi.png" density="mdpi"/>
        <icon id="hdpi" src="res/icon/android/hdpi.png" density="hdpi"/>
        <icon id="xhdpi" src="res/icon/android/xhdpi.png" density="xhdpi"/>
        <icon id="xxhdpi" src="res/icon/android/xxhdpi.png" density="xxhdpi"/>
        <icon id="xxxhdpi" src="res/icon/android/xxxhdpi.png" density="xxxhdpi"/>
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/android-splash.png"/>
        <preference name="AndroidWindowSplashScreenBackground" value="#28B8CE"/>
        <preference name="Orientation" value="portrait"/>
        <preference name="android-minSdkVersion" value="22"/>
        <preference name="GradlePluginGoogleServicesEnabled" value="true"/>
        <preference name="SplashMaintainAspectRatio" value="true"/>
        <preference name="ShowSplashScreenSpinner" value="false"/>
        <preference name="android-targetSdkVersion" value="34"/>

        <resource-file src="ding.mp3" target="app/src/main/res/raw/ding.mp3"/>
        <resource-file src="google-services.json" target="/app/google-services.json"/>
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true"/>
        </edit-config>
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application/activity[@android:name='MainActivity']">
            <activity android:windowSoftInputMode="adjustResize"/>
        </edit-config>
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="FadeSplashScreenDuration" value="750"/>
        <preference name="SplashScreenDelay" value="1" />
        <preference name="StatusBarOverlaysWebView" value="false" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
        <icon id="icon-40" src="res/icon/ios/icon-40.png" height="40" width="40"/>
        <icon id="icon" src="res/icon/ios/icon.png" height="57" width="57"/>
        <icon id="icon-40@2x" src="res/icon/ios/icon-40@2x.png" height="80" width="80"/>
        <icon id="icon-40@3x" src="res/icon/ios/icon-40@3x.png" height="120" width="120"/>
        <icon id="icon-60" src="res/icon/ios/icon-60.png" height="60" width="60"/>
        <icon id="icon-60@2x" src="res/icon/ios/icon-60@2x.png" height="120" width="120"/>
        <icon id="icon-60@3x" src="res/icon/ios/icon-60@3x.png" height="180" width="180"/>
        <icon id="icon@2x" src="res/icon/ios/icon@2x.png" height="114" width="114"/>
        <icon id="icon-small" src="res/icon/ios/icon-small.png" height="29" width="29"/>
        <icon id="icon-small@2x" src="res/icon/ios/icon-small@2x.png" height="58" width="58"/>
        <icon id="icon-small@3x" src="res/icon/ios/icon-small@3x.png" height="87" width="87"/>
        <icon id="icon-76@2x" src="res/icon/ios/icon-76@2x.png" height="152" width="152"/>
        <icon id="icon-76" src="res/icon/ios/icon-76.png" height="76" width="76"/>
        <icon id="icon-72" src="res/icon/ios/icon-72.png" height="72" width="72"/>
        <icon id="icon-72@2x" src="res/icon/ios/icon-72@2x.png" height="144" width="144"/>
        <icon id="icon-50" src="res/icon/ios/icon-50.png" height="50" width="50"/>
        <icon id="icon-50@2x" src="res/icon/ios/icon-50@2x.png" height="100" width="100"/>
        <icon id="icon-83.5@2x" src="res/icon/ios/icon-83.5@2x.png" height="167" width="167"/>
        <icon id="icon-120" src="res/icon/ios/icon-120.png" height="120" width="120"/>
        <icon id="icon-120@2x" src="res/icon/ios/icon-120@2x.png" height="240" width="240"/>
        <icon id="icon-152" src="res/icon/ios/icon-152.png" height="152" width="152"/>
        <icon id="icon-152@2x" src="res/icon/ios/icon-152@2x.png" height="304" width="304"/>
        <icon id="icon-20" src="res/icon/ios/icon-20.png" height="20" width="20"/>
        <icon id="icon-24@2x" src="res/icon/ios/icon-24@2x.png" height="48" width="48"/>
        <icon id="icon-27.5@2x" src="res/icon/ios/icon-27.5@2x.png" height="55" width="55"/>
        <icon id="icon-44@2x" src="res/icon/ios/icon-44@2x.png" height="88" width="88"/>
        <icon id="icon-86@2x" src="res/icon/ios/icon-86@2x.png" height="172" width="172"/>
        <icon id="icon-98@2x" src="res/icon/ios/icon-98@2x.png" height="196" width="196"/>
        <icon id="icon-1024" src="res/icon/ios/icon-1024.png" height="1024" width="1024"/>
        <splash src="res/screen/ios/Default@2x~universal~anyany.jpg"/>
        <splash src="res/screen/ios/Default@2x~iphone~anyany.jpg"/>
        <splash id="640-960" src="res/screen/ios/640-960.png" width="640" height="960"/>
        <splash id="960-640" src="res/screen/ios/960-640.png" width="960" height="640"/>
        <splash id="640-1136" src="res/screen/ios/640-1136.png" width="640" height="1136"/>
        <splash id="1136-640" src="res/screen/ios/1136-640.png" width="1136" height="640"/>
        <splash id="750-1334" src="res/screen/ios/750-1334.png" width="750" height="1334"/>
        <splash id="1334-750" src="res/screen/ios/1334-750.png" width="1334" height="750"/>
        <splash id="1242-2208" src="res/screen/ios/1242-2208.png" width="1242" height="2208"/>
        <splash id="2208-1242" src="res/screen/ios/2208-1242.png" width="2208" height="1242"/>
        <splash id="768-1024" src="res/screen/ios/768-1024.png" width="768" height="1024"/>
        <splash id="1024-768" src="res/screen/ios/1024-768.png" width="1024" height="768"/>
        <splash id="1536-2048" src="res/screen/ios/1536-2048.png" width="1536" height="2048"/>
        <splash id="2048-1536" src="res/screen/ios/2048-1536.png" width="2048" height="1536"/>
