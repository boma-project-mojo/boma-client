        <splash id="1125-2436" src="res/screen/ios/1125-2436.png" width="1125" height="2436"/>
        <splash id="2436-1125" src="res/screen/ios/2436-1125.png" width="2436" height="1125"/>
        <preference name="AllowInlineMediaPlayback" value="true"/>
        <preference name="WKWebViewOnly" value="true"/>
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine"/>
        <preference name="target-device" value="handset"/>
        <preference name="Orientation" value="portrait"/>
        <preference name="UseSwiftLanguageVersion" value="5"/>
        <preference name="Allow3DTouchLinkPreview" value="false"/>
        <preference name="deployment-target" value="14.0.1"/>
        <feature name="CDVWKWebViewEngine">
            <param name="ios-package" value="CDVWKWebViewEngine"/>
        </feature>
        <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>The camera is used to enable users to take photos for Community Events and People's Gallery submissions</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
            <string>Location is used to display your position on a map or to check you're in bounds when validating a token</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
            <string>The photo gallery is used to enable users to select images for Community Events and People's Gallery submissions</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="UIBackgroundModes">
            <array>
                <string>audio</string>
                <string>remote-notification</string>
            </array>
        </edit-config>
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="FadeSplashScreenDuration" value="750"/>
        <preference name="SplashScreenDelay" value="1" />
    </platform>
    <plugin name="@havesource/cordova-plugin-push" spec="2.0.0"/>
</widget>
